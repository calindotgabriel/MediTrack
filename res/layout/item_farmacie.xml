<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/bg_light_grey"
                android:padding="0dp"
                android:layout_margin="0dp">

    <ImageView
            android:id="@+id/farmacie_icon"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_gravity="center"
            android:src="@drawable/ic_sensiblu"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/farmacie_icon"
            android:weightSum="2"
            android:orientation="vertical">

        <com.neopixl.pixlui.components.textview.TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/dark_gray"
              android:textSize="20sp"
              android:layout_marginTop="6dp"
              android:id="@+id/item_header"
              android:text="name-placeholder for big text"
              pixlui:copyandpaste="false"
              pixlui:clearclipboardcontent="true"
              pixlui:typeface="Roboto-Medium.ttf"/>

        <com.neopixl.pixlui.components.textview.TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:layout_marginBottom="6dp"
              android:textColor="@color/subheader_grey"
              android:id="@+id/item_subheader"
              android:text="subheader-placeholder"
              pixlui:copyandpaste="false"
              pixlui:clearclipboardcontent="true"
              pixlui:typeface="Roboto-Thin.ttf"/>


    </LinearLayout>

</RelativeLayout>